<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background_main">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <View
        android:id="@+id/view"
        android:layout_width="306dp"
        android:layout_height="333dp"
        android:background="@drawable/shape_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="25dp"
        android:fontFamily="@font/malgunbd"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <EditText
        android:id="@+id/editEMail"
        android:maxLines="1"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:background="#E8E5E5"
        android:hint="ID or E-mail"
        android:paddingLeft="10dp"
        android:fontFamily="@font/malgun"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editPW"
        android:maxLines="1"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:background="#E8E5E5"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:fontFamily="@font/malgun"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/editEMail" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:background="#9EC5FF"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="23dp"
        android:fontFamily="@font/malgunbd"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/editPW" />

    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="계정이 없으신가요?"
        android:textColor="#000000"
        android:textSize="12dp"
        android:fontFamily="@font/malgunbd"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/btnSignup" />

    <TextView
        android:id="@+id/textPW"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="로그인이 안 되시나요?"
        android:textColor="#000000"
        android:textSize="12dp"
        android:fontFamily="@font/malgunbd"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textSignUp" />


</androidx.constraintlayout.widget.ConstraintLayout>